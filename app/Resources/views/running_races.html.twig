<!DOCTYPE html>
<html>
{% if countRunningRaces == 0 %}
    There are no current races being runned!
{% else %}
    <table border="1" style="border: thin; width: 100%">
        <tr>
            <td colspan="3">
                <h2>Running Races</h2>
            </td>
        </tr>
        {% for race in races %}
            <td style="width: 33%">
                <table border="1" style="border: thin; width: 100%;">
                    <tr>
                        <td colspan="2">
                            <h3>Race # {{ race[0].race.id }}</h3>
                        </td>
                        <td colspan="2">
                            <h3>
                                {% if race[0].race.timeElapsed is not null %}
                                    Time elapsed: {{ race[0].race.timeElapsed }} s
                                {% else %}
                                    Race ready to start!
                                {% endif %}
                            </h3>
                        </td>
                    </tr>
                    <tr>
                        <td><b>Position</b></td>
                        <td><b>Horse</b></td>
                        <td><b>Distance Covered</b></td>
                        <td><b>Final Time</b></td>
                    </tr>
                    {% for racingHorse in race %}
                        <tr>
                            <td>{{ loop.index }} </td>
                            <td>{{ racingHorse.horse.name }}</td>
                            <td>{{ racingHorse.distanceCovered }} m</td>
                            <td>
                                {% if racingHorse.timeInSeconds is not null %}
                                    {{ racingHorse.timeInSeconds }} s
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </td>
        {% endfor %}
        </tr>
    </table>
{% endif %}
</html>